doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous")
        link(rel="stylesheet" href="../css/login&registerStyle.css")
        title Sign in & Sign up Form

    body
        include ../includes/messages

        a(href="javascript:history.back()" class="back-button")
            i(class="fas fa-arrow-left")
        a(href="/" class="home-button")
            i(class="fas fa-home")

        .container
            .forms-container
                .signin-signup
                    form(action="/users/signin" method="POST" id="login-form" class="sign-in-form")
                        h2.title Inicio de Sesión
                        .input-field
                            i(class="fas fa-envelope")
                            input(type="text" name="email" id="login-email" placeholder="Email" required)
                        .input-field
                            i(class="fas fa-lock")
                            input(type="password" name="password" id="login-password" placeholder="Contraseña" required)
                        input(type="submit" value="Iniciar" class="btn solid")
                        p.social-text O inicia sesión con tus redes sociales
                        .social-media
                            a(href="#" class="social-icon")
                                i(class="fab fa-facebook-f")
                            a(href="#" class="social-icon")
                                i(class="fab fa-twitter")
                            a(href="#" class="social-icon")
                                i(class="fab fa-google")
                            a(href="#" class="social-icon")
                                i(class="fab fa-linkedin-in")

                    form(action="/users/signup" method="POST" id="sign-up-form" class="sign-up-form")
                        h2.title Registro
                        .input-field
                            i(class="fas fa-user")
                            input(type="text" name="name" id="register-name" placeholder="Nombre de Usuario" value=name required)
                        .input-field
                            i(class="fas fa-envelope")
                            input(type="email" name="email" id="register-email" placeholder="Email" value=email required)
                        .input-field
                            i(class="fas fa-lock")
                            input(type="password" name="password" id="register-password" placeholder="Contraseña" value=password required)
                        .input-field
                            i(class="fas fa-lock")
                            input(type="password" name="confirm_password" id="register-confirm-password" placeholder="Confirma Contraseña" value=confirm_password required)
                        input(type="submit" class="btn" value="Registrarse")
                        p.social-text O regístrate con tus redes sociales
                        .social-media
                            a(href="#" class="social-icon")
                                i(class="fab fa-facebook-f")
                            a(href="#" class="social-icon")
                                i(class="fab fa-twitter")
                            a(href="#" class="social-icon")
                                i(class="fab fa-google")
                            a(href="#" class="social-icon")
                                i(class="fab fa-linkedin-in")

            .panels-container
                .panel.left-panel
                    .content
                        h3 ¿Nuevo por aquí?
                        p ¡Únete a la plataforma y comienza a llevar un control financiero yae!
                        button.btn.transparent(id="sign-up-btn") Registrarse
                    img(src="/assets/img/login&register/log.svg" class="image" alt="")
                .panel.right-panel
                    .content
                        h3 ¿Uno de nosotros?
                        p ¡Te extrañamos, puedes iniciar sesión y comenzar a explorar recursos!
                        button.btn.transparent(id="sign-in-btn") Iniciar Sesión
                    img(src="/assets/img/login&register/register.svg" class="image" alt="")

        script(src="/js/login&registerScript.js")
        if showRegister
            script.
                document.addEventListener('DOMContentLoaded', function() {
                    document.querySelector("#sign-up-btn").click();
                });

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous")
