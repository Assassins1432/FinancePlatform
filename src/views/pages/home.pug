    .container
        .row.align-items-center
            .col-lg-4.text-lg-start Copyright &copy; Your Website 2023
            .col-lg-4.my-3.my-lg-0
                a.btn.btn-dark.btn-social.mx-2(href='#!' aria-label='Twitter')
